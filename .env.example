# Local Deployment Configuration
# Copy this file to .env and fill in the values

# Private key for deployment (use one from the local accounts)
# Example: Account 0 private key
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# Platform fee address (where platform fees will be sent)
# Can be the same as deployer or a different address
PLATFORM_FEE_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# RPC URL for localhost
RPC_URL=http://localhost:8545

# Set to true to mint test tokens to deployer
MINT_TEST_TOKENS=true

# Chain ID (1337 for local Hardhat/Anvil, 31337 for local Ganache)
CHAIN_ID=31337
